{
  "name": "farmconnect",
  "version": "1.0.0",
  "description": "Farm-to-consumer marketplace platform",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-deps": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test-notifications": "cd backend && node scripts/testNotifications.js",
    "setup-trichy-test": "cd backend && node scripts/testTrichyNotification.js"
  },
  "keywords": ["farm", "marketplace", "react", "nodejs", "mongodb"],
  "author": "FarmConnect Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
